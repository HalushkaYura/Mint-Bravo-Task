@inject NavigationManager nav
    <header class="justify-content-between align-items-center ps-5 pe-5 pt-4 pb-4">
        <a href="/" style="color: #8B44FF;text-decoration:none;font-size:40px;">BRAVO TEAM</a>

        <AuthorizeView>
            <Authorized>
                <div class="d-flex align-items-center">
                    <img @onclick="@(()=>nav.NavigateTo("/auth"))" class="me-5" src="/source/icons/Qr Code.svg" alt="home page">
                    <img @onclick="@(()=>nav.NavigateTo("/profile"))" style="margin-top: 5px;" src="/source/icons/User.svg" alt="user profile">
                </div>
            </Authorized>
        </AuthorizeView>
    </header>
    <div>
    <div class="mobile-header" style="justify-content:space-between;">
        @* <span @onclick="@(()=>nav.NavigateTo("/auth"))" style="color: #8B44FF;">BRAVO TEAM</span> *@
        <a href="/" style="color: #8B44FF;text-decoration:none;font-size:35px;margin-left:15px;" class="logo">BRAVO TEAM</a>
        <div>
            <img style="margin-right:10px;" @onclick="@(()=>nav.NavigateTo("/auth"))" src="/source/icons/Qr Code.svg" alt="home page">
            <img type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" src="/source/icons/Menu.svg" alt="menu">
        </div>
    </div>
    <div class="collapse" id="collapseExample">
        <div class="collapse-menu">
            <button @onclick="@(()=>nav.NavigateTo("/profile"))">
                <img src="/source/icons/User.svg" alt="user">
                <span>PROFILE</span>
            </button>
            <button @onclick="@(()=>nav.NavigateTo("/profile/history"))">
                <img src="/source/icons/Book.svg" alt="history">
                <span>HISTORY</span>
            </button>
            <button @onclick="@(()=>nav.NavigateTo("/contacts"))">
                <img src="/source/icons/person-lines-fill.svg" alt="contacts">
                <span>CONTACTS</span>
            </button>
            <button @onclick="@(()=>nav.NavigateTo("/q&a"))">
                <img src="/source/icons/question-lg.svg" alt="questions">
                <span>Q & A</span>
            </button>
        </div>
    </div>
    </div>
