@page "/confirmation"


<div class="style-wrapper">
    <Header/>
    <div class="d-flex justify-content-center mt-5">
        <h3 class="text-white" style="font-size: 40px;">Confirmation</h3>

    </div>
    <div class="d-flex justify-content-center mt-2">
        @if (Status == "success")
        {
            <p class="text-white" style="font-size: 25px;text-align:center">Your email was successfully confirmed</p>
        }
        else
        {
            <p class="text-white" style="font-size: 25px;text-align:center">Your email was not confirmed</p>
        }
    </div>
</div>


@code {
    [Parameter, SupplyParameterFromQuery] public string Status { get; set; }
}
